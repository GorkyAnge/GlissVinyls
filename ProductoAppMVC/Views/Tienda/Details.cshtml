@model Producto
@{
    ViewData["Title"] = "Detalles del Producto";
    Layout = "_LayoutUsuario";
}

<section id="portfolio-details" class="portfolio-details">
    <div class="container">
        <div class="section-title">
            <h2>Detalles de @Model.Nombre</h2>
        </div>

        <div class="row gy-4">

            <div class="col-lg-8">
                <div class="portfolio-details-slider swiper">
                    <div class="swiper-wrapper align-items-center">
                        <!-- Cambia estas imágenes por las imágenes reales de tus productos -->
                        <!-- Cambia estas imágenes por las imágenes reales de tus productos -->
                        <div class="swiper-slide">
                            <img src="@Model.Imagen" alt="@Model.Nombre">
                        </div>


                        <!-- Agrega más imágenes según sea necesario -->
                    </div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="portfolio-info">
                    <h3>Información del Producto</h3>
                    <ul>
                        @* <li><strong>Categoría</strong>: @Model.Categoria</li> *@
                        <li><strong>Precio</strong>: $@Model.Precio</li>
                        <!-- Agrega más información específica del producto -->
                    </ul>
                </div>
                <div class="portfolio-description">
                    <h2>@Model.Nombre</h2>
                    <p>
                        @Model.Descripcion


                    </p>

                    <button type="button" class="btn btn-warning" style="color: white;" onclick="location.href='@Url.Action("AgregarAlCarrito", "Tienda", new { idUsuario = ViewData["IdUsuario"], idProducto = ViewData["IdProducto"], nombre = ViewData["Nombre"] })'">
                        Añadir al Carrito
                    </button>

                  @*   Comprobar que se pasan los datos
                    @ViewBag.IdUsuario
                    @ViewBag.IdProducto
                    @ViewBag.Nombre *@

                </div>
            </div>

            <a asp-action="Index" asp-route-IdProducto="@ViewBag.IdProducto" asp-route-IdUsuario="@ViewBag.IdUsuario" asp-route-Nombre="@ViewBag.Nombre" asp-controller="Resena" class="btn btn-outline-warning">Ver Reseñas de este vinilo</a>

        </div>

    </div>
</section><!-- End Portfolio Details Section -->
