@model List<Usuario>
@{
    ViewData["Title"] = "Lista de Usuarios";
    Layout = "_LayoutAdmin";
}



<section id="general" class="contact">
    <div class="container">

        <div class="section-title">
            <h2>Lista de Usuarios</h2>
            <p>Usuarios registrados en GlissVinyls.</p>
            <button type="button" class="btn btn-warning" style="color: white;" onclick="location.href='@Url.Action("Create","Usuario")'">Añadir Nuevo Usuario</button>
        </div>

        

        <div class="row">

            <div class="col-lg-12" data-aos="fade-up" data-aos-delay="100">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#ID</th hidden>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellidos</th>
                            <th scope="col">Correo</th>
                            <th scope="col">Rol</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdUsuario</td>
                                <td>@item.Nombre</td>
                                <td>@item.Apellidos</td>
                                <td>@item.Correo</td>
                                <td>@item.Rol</td>
                                <td>
                                    @* <a asp-action="Details" asp-route-Id="@item.IdProducto" class="btn btn-primary">
                                        <i class="fas fa-eye"> Ver</i>
                                    </a> *@
                                    <a asp-controller="Usuario" asp-action="Edit" asp-route-Id="@item.IdUsuario" class="btn btn-warning" style="color: white;">
                                        <i class="fa-solid fa-pen"> Editar</i>
                                    </a>
                                    <a type="button" asp-action="Delete" asp-route-Id="@item.IdUsuario" class="btn btn-danger">
                                        <i class="fa-solid fa-trash"> Borrar</i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</section>
